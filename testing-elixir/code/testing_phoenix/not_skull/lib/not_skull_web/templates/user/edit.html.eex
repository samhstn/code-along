<h1>Edit yourself</h1>

<%= form_for @changeset, Routes.user_path(@conn, :update, @user), fn f ->%>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      We found some problems when editing your account. Please try again.
    </div>
  <% end %>

  <%= label f, :email %>
  <%= error_tag f, :email %>
  <%= text_input f, :email %>

  <%= label f, :password %>
  <%= error_tag f, :password %>
  <%= password_input f, :password %>


  <div class="submit">
    <%= submit "Update user info" %>
  </div>

  <div>
    <%= link("Back to profile", to: Routes.user_path(@conn, :show, @user)) %>
  </div>
<% end %>
